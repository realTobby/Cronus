<mah:MetroWindow x:Class="Cronus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cronus"
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Cronus by github.com/realTobby/Cronus (ZPL Editor)" Height="450" Width="800" WindowTitleBrush="{StaticResource stylecolor_foreground}">

    <Grid x:Name="grid_main" Background="{StaticResource stylecolor_mainaccent_light}">
        <DockPanel LastChildFill="True">
            <mah:MetroTabControl x:Name="menu" Background="{StaticResource stylecolor_mainaccent_light}"  SelectionChanged="menu_SelectionChanged" Style="{DynamicResource MahApps.Styles.TabControl.Animated}" TabStripPlacement="Left">

                <mah:MetroTabItem x:Name="menu_home" Header="Home" />
                <mah:MetroTabItem x:Name="menu_new" Header="New"/>
                <mah:MetroTabItem Header="Load"/>
                <mah:MetroTabItem Header="Edit"/>
                <mah:MetroTabItem Header="Print"/>
            </mah:MetroTabControl>
            <Frame x:Name="mainFrame" Source="{Binding CurrentView}" NavigationUIVisibility="Hidden"/>
        </DockPanel>
        
    </Grid>
</mah:MetroWindow>
