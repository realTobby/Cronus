<mah:MetroWindow x:Class="Cronus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cronus"
        mc:Ignorable="d"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Cronus by github.com/realTobby/Cronus (ZPL Editor)" Height="450" Width="800">
    <Grid x:Name="grid_main">

        <mah:MetroTabControl x:Name="menu" SelectionChanged="menu_SelectionChanged" Style="{DynamicResource MahApps.Styles.TabControl.Animated}">
            <mah:MetroTabItem x:Name="menu_home" Header="Home">
                <Frame Source="/Pages/PageHome.xaml"/>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="New">
                <Frame Source="/Pages/PageNew.xaml"/>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Load">
                <Frame Source="/Pages/PageLoad.xaml"/>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Edit">
                <Frame Source="/Pages/PageEdit.xaml"/>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Print">
                <Frame Source="/Pages/PagePrint.xaml"/>
            </mah:MetroTabItem>
        </mah:MetroTabControl>
        
    </Grid>
</mah:MetroWindow>
